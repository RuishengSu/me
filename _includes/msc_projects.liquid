<div class="msc_projects">
  {% if site.msc_projects != blank %}
    {% assign msc_projects_size = site.msc_projects | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.announcements.scrollable and msc_projects_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign msc_projects = site.msc_projects | reverse %}
        {% if include.limit and site.announcements.limit %}
          {% assign msc_projects_limit = site.announcements.limit %}
        {% else %}
          {% assign msc_projects_limit = msc_projects_size %}
        {% endif %}
        {% for item in msc_projects limit: msc_projects_limit %}
          <tr>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="msc_projects-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No MSc projects so far...</p>
  {% endif %}
</div>
